#include "driver_fan.h"

Fan FAN1 = { .port = FAN1_GPIO_Port, .pin = FAN1_Pin };
Fan FAN2 = { .port = FAN2_GPIO_Port, .pin = FAN2_Pin };
Fan FAN3 = { .port = FAN3_GPIO_Port, .pin = FAN3_Pin };
Fan FAN4 = { .port = FAN4_GPIO_Port, .pin = FAN4_Pin };


void Driver_Fan_On(Fan fan)
{
	HAL_GPIO_WritePin(fan.port, fan.pin, 1);
}

void Driver_Fan_Off(Fan fan)
{
	HAL_GPIO_WritePin(fan.port, fan.pin, 0);
}

void Driver_Fan_Toggle(Fan fan)
{
	HAL_GPIO_TogglePin(fan.port, fan.pin);
}

void Driver_Fan_All_On()
{
	fan_on(FAN1);
	fan_on(FAN2);
	fan_on(FAN3);
	fan_on(FAN4);
}
void Driver_Fan_All_Off()
{
	fan_off(FAN1);
	fan_off(FAN2);
	fan_off(FAN3);
	fan_off(FAN4);
}
void Driver_Fan_All_Toggle()
{
	fan_toggle(FAN1);
	fan_toggle(FAN1);
	fan_toggle(FAN1);
	fan_toggle(FAN1);
}
