void Driver_Set_Steering_Duty_Cycle(uint8_t duty_cycle)
{
	// Input validation for duty cycle
	if (duty_cycle > 255)
	{
		duty_cycle = 255;
	}
	if (duty_cycle < 0)
	{
		duty_cycle = 0;
	}

	//Set compare (255 Resolution)
	__HAL_TIM_SET_COMPARE(htim, channel, duty_cycle);
}
