void set_duty_cycle(TIM_HandleTypeDef* const htim, uint32_t channel, uint8_t duty_cycle)
{
	// Input validation for duty cycle
	if (duty_cycle > 255)
	{
		duty_cycle = 255;
	}
	if (duty_cycle < 0)
	{
		duty_cycle = 0;
	}
	__HAL_TIM_SET_COMPARE(htim, channel, duty_cycle);
}
